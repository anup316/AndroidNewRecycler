<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ex_list_group_item_height"
    >

    <TextView
        android:id="@+id/txv_group_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/ex_list_group_item_padding"
        />
    <ImageView
        android:id="@+id/img_indicator"
        android:layout_marginRight="@dimen/ex_list_group_item_padding"
        android:layout_alignParentRight="true"
        android:src="@drawable/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
</RelativeLayout>