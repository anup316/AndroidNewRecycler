<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="document.igt.com.androidnewrecycler.OffersAllActivity">

    <include
        android:id="@+id/tool_bar_offerAll"
        layout="@layout/app_tool_bar"></include>

    <document.igt.com.androidnewrecycler.layouts.SlidingTabLayout
        android:id="@+id/tabViewOfferAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerOfferAll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
